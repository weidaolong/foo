<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.wdl.foo.repository.mybatis.TeamDao">
	<resultMap id="teamDetailMap" type="Team">
		<id property="id" column="team_id" />
		<result property="name" column="team_name" />
	</resultMap>

	<!-- 获取部门详细信息, 输出用resultMap关联嵌套对象 -->
	<select id="findPage" parameterType="long" resultMap="teamDetailMap">
		select t.id as team_id,
		t.name as team_name
		from team t
		where  t.master_id=#{id}
	</select>
</mapper> 
